<table class="table-alternate">
  <thead>
    <tr class="bg-secondary">
      <th class="text-light pl-2">Status</th>
      <th class="text-light">Customer</th>
      <th class="text-light">Eircode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parcels.each do |parcel| %>
      <tr>
        <td class="pl-2"><%= Parcel.statuses[parcel.status] %></td>
        <td><%= parcel.customer %></td>
        <td><%= parcel.eircode %></td>
        <td class="td-show-btn"><%= link_to 'Show', parcel, class: 'btn btn-outline-primary btn-sm w-100' %></td>
        <td class="td-edit-btn"><%= link_to 'Edit', edit_parcel_path(parcel), class: 'btn btn-outline-primary btn-sm w-100' %></td>
        <td class="td-destroy-btn"><%= link_to 'Destroy', parcel, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm w-100' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Parcel', new_parcel_path, class: 'btn btn-primary btn-lg mt-5 w-25 align-self-center' %>
