  <div class="field">
    <%= form.label :customer %>
    <%= form.text_field :customer %>
  </div>

  <div class="field">
    <%= form.label :eircode %>
    <%= form.text_field :eircode %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
