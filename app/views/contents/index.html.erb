<table class="table-alternate">
  <thead>
    <tr class="bg-secondary">
      <th class="text-light">Name</th>
      <th class="text-light text-center">Quantity</th>
      <th class="text-light text-center">Fragile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td width="60%"><%= content.name %></td>
        <td class="text-center"><%= content.quantity %></td>
        <td class="text-center"><%= content.fragile ? 'yes' : 'no' %></td>
        <td class="td-show-btn"><%= link_to 'Show', content, class: 'btn btn-outline-primary btn-sm w-100' %></td>
        <td class="td-edit-btn"><%= link_to 'Edit', edit_content_path(content), class: 'btn btn-outline-primary btn-sm w-100' %></td>
        <td class="td-destroy-btn"><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm w-100' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Content', new_content_path, class: 'btn btn-primary btn-lg mt-5 w-25 align-self-center' %>
